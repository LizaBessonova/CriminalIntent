<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:background="@drawable/layout_style"
    android:padding="8dp">

    <CheckBox
        android:id="@+id/list_item_support_solved_check_box"
        android:layout_width="wrap_content"
        android:layout_height="107dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:padding="4dp" />

    <TextView
        android:id="@+id/list_item_support_author_text_view"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/list_item_support_solved_check_box"
        android:padding="8dp"
        android:textStyle="bold"
        tools:text="Author" />

    <TextView
        android:id="@+id/list_item_support_responsible_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_item_support_author_text_view"
        android:layout_toLeftOf="@id/list_item_support_solved_check_box"
        android:padding="8dp"
        android:textStyle="bold"
        tools:text="Responsible" />

    <TextView
        android:id="@+id/list_item_support_theme_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_item_support_responsible_text_view"
        android:layout_toLeftOf="@id/list_item_support_solved_check_box"
        android:padding="8dp"
        android:textStyle="bold"
        tools:text="Theme" />

    <TextView
        android:id="@+id/list_item_support_category_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_item_support_theme_text_view"
        android:layout_toLeftOf="@id/list_item_support_solved_check_box"
        android:padding="8dp"
        tools:text="Category" />

</RelativeLayout>