<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:background="@drawable/layout_style"
    android:padding="8dp">

    <TextView
        android:id="@+id/list_item_tiket_author_text_view"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textStyle="bold"
        tools:text="Author" />

    <TextView
        android:id="@+id/list_item_tiket_responsible_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_item_tiket_author_text_view"
        android:padding="8dp"
        android:textStyle="bold"
        tools:text="Responsible" />

    <TextView
        android:id="@+id/list_item_tiket_theme_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_item_tiket_responsible_text_view"
        android:padding="8dp"
        android:textStyle="bold"
        tools:text="Theme" />

    <TextView
        android:id="@+id/list_item_tiket_category_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_item_tiket_theme_text_view"
        android:padding="8dp"
        tools:text="Category" />

</RelativeLayout>